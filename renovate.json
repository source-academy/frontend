{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":label(dependencies)"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "rangeStrategy": "update-lockfile",
      "matchPackageNames": ["*"]
    }
  ],
  "enabledManagers": ["npm"]
}
